	<delete id="deleteUser"  parameterType="AdminVO">
		DELETE FROM user
		WHERE userid = #{userid}
	</delete> 
	
	<select id="user"  parameterType="AdminVO" resultType="AdminVO">
		SELECT userid,name,email,phone
		FROM user
	</select>
	
	<select id="athleteManagement"  parameterType="AdminVO" resultType="AdminVO">
		SELECT athletename,club,age,position,backno
		FROM   athlete
	</select>
	<select id="clubManagement"  parameterType="AdminVO" resultType="AdminVO">
		SELECT a.athletename athletename , a.club club,c.league league,c.stadiumname stadiumname
		FROM  athlete a 
		INNER JOIN club c
		ON a.club= c.club
	</select>
	<select id="ticket"  parameterType="AdminVO" resultType="AdminVO">
		SELECT t.ticketname ticketname,t.ticketprice ticketprice
			  ,t.ticketall ticketall,t.ticketremain ticketremain
			  ,t.ticketid ticketid, m.homeclub homeclub,m.awayclub awayclub,m.matchid matchid
			  
		FROM `match` m 
		INNER JOIN ticket t
		ON m.matchid = t.matchid
	</select>	
